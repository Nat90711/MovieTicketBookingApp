<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:padding="24dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/text_primary"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo Suất Chiếu Mới"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack" />

    <TextView
        android:id="@+id/lblMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn Phim:"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/spinnerMovies"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_input_border"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/lblMovie"/>

    <TextView
        android:id="@+id/lblRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn Phòng:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerMovies"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/spinnerRooms"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_input_border"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/lblRoom"/>

    <LinearLayout
        android:id="@+id/layoutDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerRooms">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:text="Ngày Chiếu" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvSelectDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Chọn Ngày"
                android:textColor="@color/text_grey"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:background="@drawable/bg_input_border"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <View android:layout_width="16dp" android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:text="Giờ Chiếu" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvSelectTime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Chọn Giờ"
                android:textColor="@color/text_grey"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:background="@drawable/bg_input_border"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/lblPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá Vé (VND):"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutDateTime"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etPrice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Ví dụ: 90000"
        android:inputType="number"
        android:background="@drawable/bg_input_border"
        android:paddingHorizontal="12dp"
        android:textColorHint="@color/text_grey"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/lblPrice"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveShowtime"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Lưu Suất Chiếu"
        android:backgroundTint="@color/button_bg"
        android:textColor="@color/text_secondary"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>